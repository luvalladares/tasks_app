<h1> All tasks </h1>
<ol>
   <% @tasks.each do |task|%>
     <li> <%= task.description%>
       <%= link_to "mostrar", task%>
       <%= link_to "borrar!", task, :method=> :delete, :confirm=> "Estas Seguro?!" %>
       <%= link_to "edit!", edit_task_path(task.id)%>
    </li>
   <%end%>
</ol>
<%= link_to "create a task", new_task_path%>
